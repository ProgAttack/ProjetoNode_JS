<h1>Lista de Hospedes </h1>

<form class="new-post" action="/cadastrohospede " method="get">
  <button type="submit" class="btn btn-dark">Novo cadastro</button>
</form>





<table class="table border border-dark mt-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col" class="bg-warning">ID</th>
      <th scope="col " class="bg-warning">Nome</th>
      <th scope="col " class="bg-warning">CPF</th>
      <th scope="col" class="bg-warning">Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each hospedes}}
    <tr>
      <td>{{id}}</td>
      <td>{{nomehospede}}</td>
      <td>{{cpf}}</td>
      <td>
        <div class="grup-action">
          <form class="form-action" action="/edithospede/{{id}}" method="get">
            <button type="submit" class="action-edit btn btn-primary mb-1">
              EDITAR
            </button>
          </form>
          <form class="form-action" action="/deletarhospede/{{id}}" method="get">
            <button type="submit" class="action-delete btn btn-danger">
              EXCLUIR
            </button>
          </form>
        </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

